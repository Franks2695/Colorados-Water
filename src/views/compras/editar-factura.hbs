<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Factura</h3>
        </div>
        <div class="card-bady">
            <form action="/compras/editar-factura/{{factura._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{factura.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cedula" class="form-control" placeholder="Cédula" value="{{factura.cedula}}">
                </div>
                <div class="form-group">
                    <input type="text" name="direccion" class="form-control" placeholder="Dirección" value="{{factura.direccion}}">
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" placeholder="Teléfono" value="{{factura.telefono}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary w-100" type="submit">    
                        GUARDAR
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>