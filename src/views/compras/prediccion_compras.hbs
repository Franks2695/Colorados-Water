<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>PREDICCIÓN DE VENTAS Y COMPRAS</h3>
    </div>
    <div class="card-body">
        <form action="/compras/prediccion_compras" method="POST">
            <h4>Predecir compras</h4>
            <div class="mt-3">
                <input type="text" name="ventas2" class="form-control" placeholder="Ingrese número de ventas" autofocus>
            </div>
            <div class="mt-3">
               <input type="text" name="monto_compras" class="form-control" placeholder="Ingrese monto de compras" autofocus>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary w-100" type="submit">
                    PREDECIR COMPRAS
                </button>
            </div>
        </form>
    </div>
</div>
</div>